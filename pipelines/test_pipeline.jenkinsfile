pipeline {
    agent any

    stages {
        stage('Example Stage') {
            steps {
                script {
                    if (env.PATH.contains('C:\\')) {
                        // Windows 环境
                        println 'Running on Windows'
                    } else {
                        // Unix/Linux 环境
                        println 'Running on Unix/Linux'
                    }
                }
            }
        }
        stage('Calculate Sum') {
            steps {
                script {
                    def sum = 0
                    (1..100).each { number ->
                        sum += number
                    }
                    println "The sum of numbers from 1 to 100 is: $sum"
                }
            }
        }
        stage('Calculate Sum2') {
            steps {
                script {
                    def sum = 0
                    (1..200).each { number ->
                        sum += number
                    }
                    println "The sum of numbers from 1 to 200 is: $sum"
                }
            }
        }
        stage('Calculate Sum3') {
            steps {
                script {
                    def sum = 0
                    (1..300).each { number ->
                        sum += number
                    }
                    println "The sum of numbers from 1 to 300 is: $sum"
                }
            }
        }
    }
}
